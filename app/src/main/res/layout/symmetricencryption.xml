<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD4EC"
    android:columnCount="2"
    android:rowCount="3"
    android:useDefaultMargins="true"
    tools:context="nielsj.crypto.view.SymmetricEncryption">

    <TextView
        android:id="@+id/guideTextView"
        android:layout_row="0"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="Type plaintext: "></TextView>

    <EditText
        android:id="@+id/plaintextEditText"
        android:layout_row="0"
        android:layout_column="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:inputType="text"></EditText>

    <Button
        android:id="@+id/encryptButton"
        android:layout_row="1"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Encrypt"></Button>

    <EditText
        android:id="@+id/encryptedEditText"
        android:layout_row="1"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:typeface="monospace"
        android:inputType="textMultiLine"></EditText>

    <Button
        android:id="@+id/decryptButton"
        android:layout_row="2"
        android:layout_column="0"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Decrypt"></Button>

    <TextView
        android:id="@+id/decryptedTextView"
        android:layout_row="2"
        android:layout_column="1"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="#000000"
        android:typeface="monospace"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textMultiLine">
    </TextView>

</GridLayout>